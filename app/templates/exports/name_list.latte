<head>
	<style>
		body {
			font-family:Arial,Geneva,Sans-Serif;
			text-align:left;
		}

		table {
			border-collapse:collapse;
			width:100%;
		}

		td {
			padding:5px;
			border:1px solid black;
			font-size:9px;
		}

		.signature {width:80px;}
		.header{color:white;background-color:black;}
	</style>
</head>
<body>
	<table>
		{foreach $result as $row}
			{if $iterator->counter % 45 == 0}
		<tr>
			<td class="header">Příjmení, Jméno, Přezdívka</td>
			<td class="header">Adresa</td>
			<td class="header">Středisko/Přístav</td>
		</tr>
			{/fi}
		<tr>
			<td class="name">{$row['surname']} {$row['name']} {$row['nick']}</td>
			<td class="address">{$row['street']}, {$row['city']}, {$row['postal_code']}</td>
			<td class="group">{$row['group_num']}, {$row['group_name']}</td>
		</tr>
		{/foreach}
	</table>
</body>
