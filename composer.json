{
    "require": {
        "php": ">=7.0.0",
        "skautis/skautis": "^2.0",
        "tracy/tracy": "^2.3",
        "nette/database": "^2.4",
        "nette/mail": "^2.4",
        "nette/di": "^2.4",
        "nette/utils": "^2.4",
        "nette/neon": "^2.4",
        "nette/robot-loader": "^3",
        "nette/bootstrap": "^2.4",
        "nette/application": "^2.4",
        "nette/php-generator": "^2.6",
        "mpdf/mpdf": "v7.0.0",
        "phpoffice/phpexcel": "^1.8",
        "latte/latte": "^2.4",
        "skautis/nette": "^2.0",
        "nette/forms": "^2.4",
        "nette/security": "^2.4",
        "radekdostal/nette-datetimepicker": "^2.5"
    },
    "require-dev": {
        "nette/tester": "^2",
        "mockery/mockery": "^0.9.4",
        "codeception/codeception": "^2.2",
        "dg/ftp-deployment": "~2.1",
        "phpunit/phpunit": "^6.0",
        "doctrine/instantiator": "~1.0.0",
        "php-coveralls/php-coveralls": "^1.0",
        "phpmd/phpmd": "^2.6",
        "phpstan/phpstan": "^0.9.2",
        "phpstan/phpstan-nette": "^0.9.0",
        "symplify/easy-coding-standard": "^4.0"
    },
    "autoload": {
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "scripts": {
        "analyze:size": "phpmd app text codesize.xml",
        "analyze:standard": "ecs check app --ansi",
        "analyze:static": "phpstan analyze -c phpstan.neon -l 0 app",
        "analyze": [
            "@analyze:size",
            "@analyze:standard",
            "@analyze:static"
        ],
        "test:unit": "composer tester -- --coverage tests/unit/coverage.html --coverage-src app/ tests/unit",
        "test:acceptance": "codeception",
        "tester": "tester -C -j 10",
        "codeception": "vendor/codeception/codeception/codecept run acceptance",
        "clean": "find temp/cache ! -name 'placeholder.txt' -type f -exec rm -rf {} +",
        "deploy": "vendor/dg/ftp-deployment/deployment deployment.ini",
        "deploy:test": "vendor/dg/ftp-deployment/deployment deployment.ini --test",
        "release": [
            "composer test:unit",
            "composer deploy:test",
            "npm run version"
        ]
    }
}
