{
    "require": {
        "skautis/skautis": "^2.0",
        "tracy/tracy": "^2.3",
        "nette/database": "^2.4",
        "nette/mail": "^2.4",
        "nette/di": "^2.4",
        "nette/utils": "^2.4",
        "nette/neon": "^2.4",
        "nette/robot-loader": "^2.4",
        "nette/bootstrap": "^2.4",
        "nette/application": "^2.4",
        "mpdf/mpdf": "^6.1",
        "phpoffice/phpexcel": "^1.8",
        "latte/latte": "^2.4",
        "skautis/nette": "^2.0"
    },
    "require-dev": {
        "nette/tester": "^1.7",
        "mockery/mockery": "^0.9.4",
        "codeception/codeception": "^2.2",
        "webchemistry/custom-bar": "^1.2",
        "dg/ftp-deployment": "~2.1"
    },
    "autoload": {
        "files": [
            "app/helpers.php"
        ]
    },
    "scripts": {
        "unit": "php -f vendor/nette/tester/Tester/tester.php -- -c tests/php-unix.ini -j 10 tests/unit",
        "acceptance": "php -f vendor/codeception/codeception/codecept run acceptance",
        "deploy": "php -f vendor/dg/ftp-deployment/deployment deployment.ini",
        "deploy-test": "php -f vendor/dg/ftp-deployment/deployment deployment.ini --test",
        "release": "grunt build"
    }
}
