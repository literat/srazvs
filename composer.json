{
    "require": {
        "php": ">=7.0.0",
        "skautis/skautis": "^2.0",
        "tracy/tracy": "^2.3",
        "nette/database": "^2.4",
        "nette/mail": "^2.4",
        "nette/di": "^2.4",
        "nette/utils": "^2.4",
        "nette/neon": "^2.4",
        "nette/robot-loader": "^2.4",
        "nette/bootstrap": "^2.4",
        "nette/application": "^2.4",
        "nette/php-generator": "^2.6",
        "mpdf/mpdf": "v7.0.0",
        "phpoffice/phpexcel": "^1.8",
        "latte/latte": "^2.4",
        "skautis/nette": "^2.0",
        "nette/forms": "^2.4",
        "nette/security": "^2.4",
        "radekdostal/nette-datetimepicker": "^2.5"
    },
    "require-dev": {
        "nette/tester": "^2",
        "mockery/mockery": "^0.9.4",
        "codeception/codeception": "^2.2",
        "dg/ftp-deployment": "~2.1",
        "phpunit/phpunit": "^6.0",
        "doctrine/instantiator": "~1.0.0",
        "php-coveralls/php-coveralls": "^1.0",
        "friendsofphp/php-cs-fixer": "^2.11",
        "phpmd/phpmd": "^2.6",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "scripts": {
        "code:sniffer": "phpcs --standard=phpcs.xml --colors -p -s app",
        "code:mess": "phpmd app text codesize.xml",
        "code:fixer": "php-cs-fixer fix --dry-run --diff --diff-format=udiff --ansi",
        "code:analysis": "vendor/bin/phpstan analyze -l 4 -c phpstan.neon app",
        "code": [
            "@code:sniffer",
            "@code:mess",
            "@code:fixer"
        ],
        "test:unit": "composer tester -- --coverage tests/unit/coverage.html --coverage-src app/ tests/unit",
        "test:acceptance": "codeception",
        "tester": "tester -C -j 10",
        "codeception": "vendor/codeception/codeception/codecept run acceptance",
        "clean": "find temp/cache ! -name 'placeholder.txt' -type f -exec rm -rf {} +",
        "deploy": "vendor/dg/ftp-deployment/deployment deployment.ini",
        "deploy:test": "vendor/dg/ftp-deployment/deployment deployment.ini --test",
        "release": [
            "composer test:unit",
            "composer deploy:test",
            "npm run version"
        ]
    }
}
